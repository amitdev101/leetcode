{
    "manifest_version": 3,
    "name": "Message Sender",
    "version": "1.0",
    "description": "Sends messages from a file or textarea.",
    "permissions": ["activeTab", "storage","http://*/*", "https://*/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      }
  }
  